<!DOCTYPE html>
<html>
<head>
	<title>UX Madison</title>
  <%= favicon_link_tag %>
	<link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
	
  <%= stylesheet_link_tag "core" %>
  <%= javascript_include_tag "application" %>
	<%= javascript_include_tag 'modernizr-1.7.min.js' %>
	<%= javascript_include_tag 'selectivizr-min.js' %>
	<%= javascript_include_tag 'css_browser_selector.js' %>
	<%= csrf_meta_tag %>
</head>
<body>
	<section class="container">
		
		<%= render :partial => "shared/site_header" %>
		
		<div class="sub-container">
			<%= yield %>
		</div>
		
		<footer>
			<div class="designer_hr_full"></div>
			Copyright &copy; 2012 Madison User Experience Conference  |  <a href="#">contact@uxmad.com</a>
		</footer>
		
	</section>
</body>
</html>
